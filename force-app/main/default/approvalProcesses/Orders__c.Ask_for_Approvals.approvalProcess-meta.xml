<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Request_Name__c</field>
        <field>Total_Units__c</field>
        <field>Special_Shipping_Instructions__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>POP_Promo_Order_Approvers</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Total_Units__c  &gt;  $User.Promo_Approval_Threshold_Amount__c</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Assign Approver</label>
        <name>Assign_Approver</name>
    </approvalStep>
    <emailTemplate>Promo_CaseMgmt_Emails/Promo_Order_Pending_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Orders__c.Total_Units__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Orders__c.Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approve_the_Request</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Promo_Integration_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Promo_Order_Request_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Promo_Expedited_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Promo_Order_Request_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Ask_for_Approvals</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Populate_Approver_asked_on</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Ask for Approvals</label>
    <recallActions>
        <action>
            <name>Promo_Expedited_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
