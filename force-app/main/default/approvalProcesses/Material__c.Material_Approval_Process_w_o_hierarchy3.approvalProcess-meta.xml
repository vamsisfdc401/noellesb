<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Cinedigm</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Paramount</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>UPHE_Brand</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>UPHE_Customer_Service</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>UPHE_Domestic_Operations</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Material_Status__c</field>
        <field>Material_Type__c</field>
        <field>Material_Number__c</field>
        <field>Street_Date__c</field>
        <field>Label_Code__c</field>
        <field>Request_Number__c</field>
        <field>LastModifiedBy</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Set_Unlock_Flag</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Deal_Approver</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Material__c.Item_Type__c</field>
                <operation>equals</operation>
                <value>S (Single)</value>
            </criteriaItems>
            <criteriaItems>
                <field>Material__c.Deal_ID__c</field>
                <operation>equals</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Deal Approver</label>
        <name>Deal_Approver</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Master_Data</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Material__c.Brand_Group__c</field>
                <operation>equals</operation>
            </criteriaItems>
        </entryCriteria>
        <label>Step for Master Data User</label>
        <name>Step_for_Master_Data_User</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>OR(AND(OR( ISPICKVAL(Material_Type__c, &#39;ROH&#39;), ISPICKVAL(Material_Type__c, &#39;Z009&#39;)), 
OR( ISPICKVAL(Material_Status__c, &#39;Processed in SAP&#39;), ISPICKVAL(Material_Status__c, &#39;Sent Back&#39;),ISPICKVAL(Material_Status__c, &#39;Deleted&#39;))), 
AND( Is_HEEPs__c==False , ISPICKVAL(Material_Type__c, &#39;FERT&#39;), OR( ISPICKVAL(Material_Status__c, &#39;Draft&#39;), ISPICKVAL(Material_Status__c, &#39;Sent Back&#39;),ISPICKVAL(Material_Status__c, &#39;Deleted&#39;)), 
OR( AND( Count_BOM_Item__c &gt; 0, ISPICKVAL( Item_Type__c , &#39;D (Display Vehicle)&#39;)), NOT(ISPICKVAL( Item_Type__c , &#39;D (Display Vehicle)&#39;)) ) ))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_Material_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Skip_Validation_Field</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Material_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Material_Status_to_Sent_Back</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Skip_Validation_Field</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Get_Submitter_s_Email</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Unlock_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Material_Status_to_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Skip_Validation_Field</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Material Approval Process w/o hierarchy3</label>
    <recallActions>
        <action>
            <name>Update_Material_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Skip_Validation_Field</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
