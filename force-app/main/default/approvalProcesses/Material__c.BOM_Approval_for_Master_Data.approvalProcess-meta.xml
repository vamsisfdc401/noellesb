<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Master_Data</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Master Data Queue</label>
        <name>Master_Data_Queue</name>
    </approvalStep>
    <emailTemplate>Releaseforce_Email_Templates_Folder/BOM_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Material__c.BOM_Status__c</field>
            <operation>equals</operation>
            <value>Pending Final Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>BOM_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>uncheck_send_direct_to_sap</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_BOM_Integration_State</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_BOM_Requested_By</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_BOM_Requested_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_BOM_status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>BOM_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_BOM_status_to_Sent_Back</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Get_Submitter_s_Email</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Unlock_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_BOM_Status_to_PendingFinalApprova</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>BOM Approval for Master Data</label>
    <recallActions>
        <action>
            <name>Update_BOM_status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
