                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>ISPICKVAL( Acquisition_Deal_Stage__c , &#39;Pending Board Approval&#39;) &amp;&amp; NOT(ISBLANK( Acq_Deal_Level_Formula__c )) &amp;&amp; NOT(ISBLANK( MG_Currency__c )) &amp;&amp; MG_Currency__c &gt;=0 &amp;&amp; NOT(ISBLANK( Genre__c ))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Finance Review</label>
        <name>Finance_Review</name>
        <rejectionActions>
            <action>
                <name>Deal_Rejected_Due_To_Incomplete_data</name>
