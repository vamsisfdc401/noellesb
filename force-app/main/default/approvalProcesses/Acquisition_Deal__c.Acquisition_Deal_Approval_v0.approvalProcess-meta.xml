                <name>johnny.fewings@nbcuni.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Acquisition_Deal__c.Genre__c</field>
                <operation>equals</operation>
                <value>Feature Film,Documentary (Film Group)</value>
            </criteriaItems>
        </entryCriteria>
