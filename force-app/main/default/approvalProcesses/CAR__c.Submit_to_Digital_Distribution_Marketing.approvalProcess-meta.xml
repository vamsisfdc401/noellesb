<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>UPHE_Brand</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>UPHE_Sales</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>UPHE_Sales_and_Marketing</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Request_Name__c</field>
        <field>Territory__c</field>
        <field>Owner</field>
        <field>Title_Promotion__c</field>
        <field>Data_Required_for_Next_Step__c</field>
        <field>Project_Overview__c</field>
        <field>Creative_Direction__c</field>
        <field>File_Specifications__c</field>
        <field>Delivery_Instructions__c</field>
        <field>Due_Date__c</field>
        <field>First_Comp_Due__c</field>
        <field>Flight_Date__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>CAR_Digital_Distribution_Marketing</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>CAR__c.RecordType</field>
                <operation>equals</operation>
                <value>Digital Distribution</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Digital Distribution Marketing Approval</label>
        <name>Digital_Distribution_Marketing_Approval</name>
    </approvalStep>
    <emailTemplate>unfiled$public/CAR_HTML_Customer_Marketing_Submitted</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>CAR__c.Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <criteriaItems>
            <field>CAR__c.RecordType</field>
            <operation>notEqual</operation>
            <value>Customer Marketing,Customer Marketing - Non-Promoted</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CAR_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_to_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CAR_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Owner_to_Digital_Distribution</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Review</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Submit to Digital Distribution Marketing</label>
    <recallActions>
        <action>
            <name>Update_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
